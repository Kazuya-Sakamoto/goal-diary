.diary
  .card-list
    = link_to diary_path(diary.id) do
      .card-item
        .card-img
          .img:hover
            = image_tag diary.image.url, class: 'img', alt: "顔写真1" if diary.image.present?
        .card-title
          残り
          = diary.date.ceil(0)
          日
        .card-content
          = diary.content.slice(0..15,)
          -# = link_to diary_path(diary), placeholder: :readmore
          .content-name
            = diary.user.nickname
            -# = render partial: "likes"