<% flash.each do |diary_type, diary| %>
    <div class="alert alert-<%= diary_type %>">
      <%= diary %>
    </div>
<% end %>
<div class="new-wrapper">
  <h2>Sign up</h2>
  <div class="header-yes">
    <div class="header-line"></div>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, placeholder: :'sample', autofocus: true %>
  </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, placeholder: :'sample@sample', autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: :'sample', autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, placeholder: :'sample', autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image, placeholder: :画像, class: :button %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
